<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
	id="service.autosub"
	name="Auto Subtitle Enabler"
	version="0.0.9"
	provider-name="fnord12 - based on Language Preference Manager"
	>
	<requires>
		<import addon="xbmc.python" version="2.25.0"/>
	</requires>
	<extension point="xbmc.service" library="default.py" start="login"/>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Auto Subtitle Enabler</summary>
		<description lang="en">Sets subtitle track according to your language preferences</description>
		<disclaimer lang="en">A prescriptive rework of Language Preference Manager</disclaimer>
		<platform>all</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
		</assets>
	</extension>
</addon>
